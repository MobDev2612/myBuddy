<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.persistent.nammabangalore.mybuddy.Activity.HomeActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/profile_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_profile"
            android:text="Profile"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/attendence_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_attendance"
            android:text="Attendance"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/book_room_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_conf_booking"
            android:text="Book Room"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/events_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_events"
            android:text="Events"
            android:textAllCaps="false"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/holo_blue_dark" />

    <com.persistent.nammabangalore.mybuddy.Utils.FontView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Upcoming Events"
        android:background="#d3d3d3"
        android:paddingBottom="3dp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_dark" />

    <ListView
        android:id="@+id/home_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_dark" />

    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/view_more_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View More"
        android:minHeight="20dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:textAllCaps="false" />

</LinearLayout>
