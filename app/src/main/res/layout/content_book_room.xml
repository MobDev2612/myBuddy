<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.persistent.nammabangalore.mybuddy.Activity.BookRoomActivity"
    tools:showIn="@layout/activity_book_room">

    <Spinner
        android:id="@+id/book_room_meeting_room"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:entries="@array/rooms" />

    <ListView
        android:id="@+id/room_bookings_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
