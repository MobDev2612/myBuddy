<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.persistent.nammabangalore.mybuddy.Activity.BookingDetailsActivity">

    <com.persistent.nammabangalore.mybuddy.Utils.FontView
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:text="Meeting Name"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.persistent.nammabangalore.mybuddy.Utils.FontView
        android:id="@+id/meeting_details_name"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="Meeting Name"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.persistent.nammabangalore.mybuddy.Utils.FontView
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:text="Booked By"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.persistent.nammabangalore.mybuddy.Utils.FontView
        android:id="@+id/meeting_details_booked_by"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="Booked By"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.persistent.nammabangalore.mybuddy.Utils.FontView
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:text="Meeting Date"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.persistent.nammabangalore.mybuddy.Utils.FontView
        android:id="@+id/meeting_details_date"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="Meeting Date"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.persistent.nammabangalore.mybuddy.Utils.FontView
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:text="Start Time"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.persistent.nammabangalore.mybuddy.Utils.FontView
                android:id="@+id/meeting_details_start_time"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:text="Starting Time"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.persistent.nammabangalore.mybuddy.Utils.FontView
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:text="End Time"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.persistent.nammabangalore.mybuddy.Utils.FontView
                android:id="@+id/meeting_details_end_time"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:singleLine="true"
                android:text="End Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <com.persistent.nammabangalore.mybuddy.Utils.FontView
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:text="Description"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.persistent.nammabangalore.mybuddy.Utils.FontView
        android:id="@+id/meeting_details_description"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:singleLine="false"
        android:text="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>
